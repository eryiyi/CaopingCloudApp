<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.caoping.cloud.widget.ReboundScrollView android:layout_width="match_parent"
                                                android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:padding="8dp"
                      android:layout_height="match_parent">
            <ImageView android:layout_width="match_parent"
                       android:src="@drawable/no_pic"
                       android:id="@+id/company_pic"
                       android:scaleType="centerCrop"
                       android:layout_height="200dp"/>
            <TextView android:layout_width="match_parent"
                      android:padding="8dp"
                      android:id="@+id/company_detail"
                      android:textColor="@color/text_color"
                      android:lineSpacingMultiplier="1.4"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"

                      android:id="@+id/company_person"
                      android:padding="8dp"
                      android:textSize="16sp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"

                      android:padding="8dp"
                      android:id="@+id/company_tel"
                      android:textSize="16sp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"

                      android:padding="8dp"
                      android:id="@+id/company_address"
                      android:textSize="16sp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.caoping.cloud.widget.ReboundScrollView>

</LinearLayout>