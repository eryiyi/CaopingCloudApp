<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            layout="@layout/top_liner"/>

    <com.caoping.cloud.widget.ReboundScrollView android:layout_width="match_parent"
                                                android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_marginTop="8dp"
                      android:layout_height="match_parent">
            <TextView android:layout_width="match_parent"
                      android:text="个人资料"
                      android:id="@+id/btn_ziliao"
                      android:drawableRight="@drawable/sm_post_more"
                      android:background="@drawable/btn_white_shape"
                      android:textColor="@color/text_color"
                      android:textSize="16sp"
                      android:padding="15dp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="match_parent"
                      android:text="修改密码"
                      android:layout_marginTop="2dp"
                      android:id="@+id/btn_pwr"
                      android:drawableRight="@drawable/sm_post_more"
                      android:background="@drawable/btn_white_shape"
                      android:textColor="@color/text_color"
                      android:textSize="16sp"
                      android:padding="15dp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="match_parent"
                      android:text="版本升级"
                      android:layout_marginTop="2dp"
                      android:id="@+id/btn_check_version"
                      android:drawableRight="@drawable/sm_post_more"
                      android:background="@drawable/btn_white_shape"
                      android:textColor="@color/text_color"
                      android:textSize="16sp"
                      android:padding="15dp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="match_parent"
                      android:text="帮助文档"
                      android:id="@+id/btn_help"
                      android:layout_marginTop="2dp"
                      android:drawableRight="@drawable/sm_post_more"
                      android:background="@drawable/btn_white_shape"
                      android:textColor="@color/text_color"
                      android:textSize="16sp"
                      android:padding="15dp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="match_parent"
                      android:text="收货地址"
                      android:id="@+id/mine_address"
                      android:layout_marginTop="2dp"
                      android:drawableRight="@drawable/sm_post_more"
                      android:background="@drawable/btn_white_shape"
                      android:textColor="@color/text_color"
                      android:textSize="16sp"
                      android:padding="15dp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="match_parent"
                      android:text="关于我们"
                      android:id="@+id/set_about_us"
                      android:layout_marginTop="2dp"
                      android:drawableRight="@drawable/sm_post_more"
                      android:background="@drawable/btn_white_shape"
                      android:textColor="@color/text_color"
                      android:textSize="16sp"
                      android:padding="15dp"
                      android:layout_height="wrap_content"/>
            <Button android:layout_width="match_parent"
                    android:text="退 出"
                    android:padding="12dp"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/white"
                    android:onClick="quiteAction"
                    android:layout_below="@+id/liner_one"
                    android:layout_marginLeft="25dp"
                    android:textSize="16sp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/btn_green_radio_shape"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </com.caoping.cloud.widget.ReboundScrollView>
</LinearLayout>