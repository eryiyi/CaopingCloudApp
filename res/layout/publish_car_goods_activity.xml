<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/main"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            layout="@layout/top_liner"/>

    <com.caoping.cloud.widget.ReboundScrollView android:layout_width="match_parent"
                                                android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <TextView android:layout_width="match_parent"
                      android:text="货源信息"
                      android:textColor="@color/text_color"
                      android:padding="12dp"
                      android:background="#f6f6f6"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="发货地："
                      android:padding="8dp"
                      android:layout_marginLeft="8dp"
                      android:drawableLeft="@drawable/star"
                      android:layout_marginTop="8dp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <com.caoping.cloud.widget.CustomerSpinner
                        android:background="@drawable/login_edit_bg"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:drawableLeft="@drawable/star"
                        android:paddingLeft="15dp"
                        style="@style/button_text"
                        android:layout_marginTop="6dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/mm_emp_provinceId"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="40dp">
                </com.caoping.cloud.widget.CustomerSpinner>

                <com.caoping.cloud.widget.CustomerSpinner
                        android:background="@drawable/login_edit_bg"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:drawableLeft="@drawable/star"
                        android:layout_marginTop="6dp"
                        android:paddingLeft="15dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/mm_emp_cityId"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="40dp">

                </com.caoping.cloud.widget.CustomerSpinner>
                <com.caoping.cloud.widget.CustomerSpinner
                        android:background="@drawable/login_edit_bg"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:drawableLeft="@drawable/star"
                        android:layout_marginTop="6dp"
                        android:paddingLeft="15dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/mm_emp_countryId"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="40dp">
                </com.caoping.cloud.widget.CustomerSpinner>
            </LinearLayout>
            <TextView android:layout_width="wrap_content"
                      android:padding="8dp"
                      android:text="收货地："
                      android:layout_marginLeft="8dp"
                      android:drawableLeft="@drawable/star"
                      android:layout_marginTop="8dp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <com.caoping.cloud.widget.CustomerSpinner
                        android:background="@drawable/login_edit_bg"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:drawableLeft="@drawable/star"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="6dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/mm_emp_provinceId1"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="40dp">
                </com.caoping.cloud.widget.CustomerSpinner>

                <com.caoping.cloud.widget.CustomerSpinner
                        android:background="@drawable/login_edit_bg"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:drawableLeft="@drawable/star"
                        android:layout_marginTop="6dp"
                        android:paddingLeft="15dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/mm_emp_cityId1"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="40dp">

                </com.caoping.cloud.widget.CustomerSpinner>
                <com.caoping.cloud.widget.CustomerSpinner
                        android:background="@drawable/login_edit_bg"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:drawableLeft="@drawable/star"
                        android:layout_marginTop="6dp"
                        android:paddingLeft="15dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/mm_emp_countryId1"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="40dp">
                </com.caoping.cloud.widget.CustomerSpinner>
            </LinearLayout>
            <TextView android:layout_width="match_parent"
                      android:text="发货起止时间"
                      android:padding="8dp"
                      android:layout_marginLeft="8dp"
                      android:drawableLeft="@drawable/star"
                      android:layout_marginTop="8dp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <EditText android:layout_width="match_parent"
                          android:layout_marginLeft="8dp"
                          android:layout_marginRight="8dp"
                          android:textColor="@color/text_color"
                          android:padding="12dp"
                          android:drawableLeft="@drawable/canlendar"
                          android:drawableRight="@drawable/caret"
                          android:focusable="false"
                          android:inputType="none"
                          android:id="@+id/start_time"
                          android:background="#f6f6f6"
                          android:layout_height="wrap_content"/>
                <EditText android:layout_width="match_parent"
                          android:textColor="@color/text_color"
                          android:padding="12dp"
                          android:drawableRight="@drawable/caret"
                          android:focusable="false"
                          android:drawableLeft="@drawable/canlendar"
                          android:layout_marginLeft="8dp"
                          android:layout_marginRight="8dp"
                          android:layout_marginTop="3dp"
                          android:inputType="none"
                          android:id="@+id/end_time"
                          android:background="#f6f6f6"
                          android:layout_height="wrap_content"/>
            </LinearLayout>


            <TextView android:layout_width="match_parent"
                      android:text="货物说明"
                      android:textColor="@color/text_color"
                      android:padding="12dp"
                      android:layout_height="wrap_content"/>
            <EditText android:layout_width="match_parent"
                      android:hint="请填写货物说明"
                      android:gravity="top"
                      android:minHeight="80dp"
                      android:padding="12dp"
                      android:id="@+id/detail"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="8dp"
                      android:background="@drawable/et_bule_bg"
                      android:textColor="@color/text_color"
                      android:textSize="16sp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="match_parent"
                      android:text="联系方式"
                      android:layout_marginTop="6dp"
                      android:textColor="@color/text_color"
                      android:padding="12dp"
                      android:background="#f6f6f6"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="match_parent"
                      android:text="联系人姓名"
                      android:drawableLeft="@drawable/star"
                      android:textColor="@color/text_color"
                      android:padding="8dp"
                      android:layout_marginLeft="8dp"
                      android:layout_height="wrap_content"/>
            <EditText android:layout_width="match_parent"
                      android:hint="请输入联系人姓名"
                      android:padding="12dp"
                      android:id="@+id/person"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="8dp"
                      android:background="@drawable/et_bule_bg"
                      android:textColor="@color/text_color"
                      android:textSize="16sp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="match_parent"
                      android:text="联系人手机号"
                      android:drawableLeft="@drawable/star"
                      android:textColor="@color/text_color"
                      android:padding="8dp"
                      android:layout_marginLeft="8dp"
                      android:layout_height="wrap_content"/>
            <EditText android:layout_width="match_parent"
                      android:hint="请输入联系人手机号"
                      android:padding="12dp"
                      android:layout_marginBottom="20dp"
                      android:layout_marginLeft="8dp"
                      android:id="@+id/tel"
                      android:layout_marginRight="8dp"
                      android:background="@drawable/et_bule_bg"
                      android:textColor="@color/text_color"
                      android:textSize="16sp"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.caoping.cloud.widget.ReboundScrollView>
</LinearLayout>