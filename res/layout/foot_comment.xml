<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="60dp">

    <LinearLayout android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:id="@+id/foot_liner_one"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="30dp"
                   android:src="@drawable/md_icon_list"
                   android:id="@+id/foot_one"
                   android:layout_height="30dp"/>
        <TextView android:layout_width="wrap_content"
                  android:text="我评论的"
                  android:id="@+id/foot_one_text"
                  android:textColor="@color/text_color"
                  android:layout_marginTop="5dp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_weight="1"
                  android:id="@+id/foot_liner_two"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="30dp"
                   android:id="@+id/foot_two"
                   android:src="@drawable/md_icon_list_tree"
                   android:layout_height="30dp"/>
        <TextView android:layout_width="wrap_content"
                  android:text="评论我的"
                  android:id="@+id/foot_two_text"
                  android:textColor="@color/text_color"
                  android:layout_marginTop="5dp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>