                    <ImageView android:layout_width="0dp"
                               android:layout_weight="1"
                               android:scaleType="centerCrop"
                               android:id="@+id/btn_czgy"
                               android:src="@drawable/first_ad_three"
                               android:layout_height="wrap_content"/>
