<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:auto3d="http://schemas.android.com/apk/res/com.caoping.cloud"
              android:background="@color/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/ad"
            android:layout_height="200dp">
        <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">
            <LinearLayout
                    android:id="@+id/viewGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp">
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.5dp"></View>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="8dp"
                  android:background="@color/white"
                  android:layout_height="wrap_content">
        <LinearLayout android:layout_width="0dp"
                      android:background="@drawable/btn_white_shape"
                      android:orientation="vertical"
                      android:id="@+id/btn_one"
                      android:layout_weight="1"
                      android:padding="8dp"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                       android:src="@drawable/home_md_home"
                       android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="草坪数据"
                      android:layout_marginTop="8dp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="0dp"
                      android:orientation="vertical"
                      android:id="@+id/btn_two"
                      android:layout_weight="1"
                      android:padding="8dp"
                      android:background="@drawable/btn_white_shape"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                       android:src="@drawable/home_md_ditu"
                       android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="附近草坪"
                      android:layout_marginTop="8dp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:padding="8dp"
                      android:id="@+id/btn_three"
                      android:background="@drawable/btn_white_shape"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                       android:src="@drawable/home_md_wuliu"
                       android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="物流信息"
                      android:layout_marginTop="8dp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="0dp"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:id="@+id/btn_four"
                      android:padding="8dp"
                      android:background="@drawable/btn_white_shape"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                       android:src="@drawable/home_md_top"
                       android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="名企排行"
                      android:layout_marginTop="8dp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:padding="8dp"
                  android:layout_marginTop="8dp"
                  android:background="@color/white"
                  android:layout_height="wrap_content">
            <LinearLayout android:layout_width="0dp"
                          android:layout_weight="1"
                          android:id="@+id/btn_news"
                          android:background="@drawable/btn_white_shape"
                          android:orientation="vertical"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="草原头条"
                          android:textSize="16sp"
                          android:textColor="@color/text_color"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="行业快讯及经验"
                          android:layout_marginTop="5dp"
                          android:textSize="14sp"
                          android:singleLine="true"
                          android:textColor="@color/text_color_two"
                          android:layout_height="wrap_content"/>
                <ImageView android:layout_width="95dp"
                           android:src="@drawable/kuaixun"
                           android:layout_height="wrap_content"/>
            </LinearLayout>
        <LinearLayout android:layout_width="0dp"
                      android:id="@+id/btn_jixie"
                      android:layout_weight="1"
                      android:background="@drawable/btn_white_shape"
                      android:orientation="vertical"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="草原机械"
                      android:textSize="16sp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="先进的草坪机械设备"
                      android:layout_marginTop="5dp"
                      android:singleLine="true"
                      android:textSize="14sp"
                      android:textColor="@color/text_color_two"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="95dp"
                       android:src="@drawable/jixie"
                       android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="1"
                      android:id="@+id/btn_caozhong"
                      android:background="@drawable/btn_white_shape"
                      android:orientation="vertical"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="草种供应"
                      android:textSize="16sp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="优质良种"
                      android:singleLine="true"
                      android:layout_marginTop="5dp"
                      android:textSize="14sp"
                      android:textColor="@color/text_color_two"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="95dp"
                       android:src="@drawable/caozhong"
                       android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.5dp"></View>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="15dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="最新入驻"
                  android:textColor="@color/text_color"
                  android:textSize="16sp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.5dp"></View>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:background="@drawable/btn_white_shape"
                  android:padding="8dp"
                  android:layout_gravity="center_vertical"
                  android:gravity="center_vertical"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="25dp"
                   android:src="@drawable/sm_broad"
                   android:layout_height="25dp"/>
        <com.caoping.cloud.widget.AutoTextView
                android:id="@+id/switcher02"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                auto3d:textSize="30sp" />
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/text_color_two"
                  android:textSize="14sp"
                  android:text="入驻草坪云"
                  android:layout_marginLeft="8dp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.5dp"></View>

    <RelativeLayout android:layout_width="match_parent"
                  android:padding="12dp"
                  android:background="@drawable/btn_white_shape"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="名企排行"
                  android:textStyle="bold"
                  android:layout_centerInParent="true"
                  android:textColor="@color/red_p"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="查看更多"
                  android:id="@+id/btn_more"
                  android:textSize="13sp"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/text_color_two"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>