<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:auto3d="http://schemas.android.com/apk/res/com.caoping.cloud"
              android:background="@color/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/ad"
            android:layout_height="200dp">
        <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">
            <LinearLayout
                    android:id="@+id/viewGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp">
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.5dp"></View>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="1dp"
                  android:background="@color/white"
                  android:layout_height="wrap_content">
        <LinearLayout android:layout_width="0dp"
                      android:background="@drawable/btn_white_shape"
                      android:orientation="vertical"
                      android:id="@+id/btn_one"
                      android:layout_weight="1"
                      android:padding="8dp"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                       android:src="@drawable/icon_rxcp"
                       android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="热销产品"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="0dp"
                      android:orientation="vertical"
                      android:id="@+id/btn_two"
                      android:layout_weight="1"
                      android:padding="8dp"
                      android:background="@drawable/btn_white_shape"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                       android:src="@drawable/icon_fjjd"
                       android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="附近基地"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:padding="8dp"
                      android:id="@+id/btn_three"
                      android:background="@drawable/btn_white_shape"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                       android:src="@drawable/icon_cpjx"
                       android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="草坪机械"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="0dp"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:id="@+id/btn_four"
                      android:padding="8dp"
                      android:background="@drawable/btn_white_shape"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                       android:src="@drawable/icon_wldt"
                       android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="物流大厅"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_marginTop="1dp"
                  android:background="@color/white"
                  android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:layout_marginLeft="8dp"
                          android:layout_marginRight="8dp"
                          android:layout_marginTop="6dp"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="wrap_content"
                           android:src="@drawable/icon_green"
                           android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="名企风采"
                          android:layout_weight="1"
                          android:textSize="18sp"
                          android:layout_marginLeft="6dp"
                          android:textColor="@color/green"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="查看更多 "
                          android:id="@+id/btn_more1"
                          android:drawableRight="@drawable/in"
                          android:textSize="16sp"
                          android:textColor="@color/text_color"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
        <com.caoping.cloud.widget.PictureGridview
                android:id="@+id/gridview"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:horizontalSpacing="3dip"
                android:numColumns="3"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="8dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="0dip"
                />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:background="@color/white"
                  android:layout_height="wrap_content">
            <LinearLayout android:layout_width="0dp"
                          android:layout_weight="1"
                          android:id="@+id/liner_one"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:orientation="horizontal"
                          android:layout_height="60dp">
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_marginLeft="5dp"
                              android:orientation="vertical"
                              android:layout_weight="1"
                              android:gravity="center|left"
                              android:layout_height="match_parent">
                    <TextView android:layout_width="wrap_content"
                              android:text="加入草坪云的理由"
                              android:textSize="13sp"
                              android:textColor="@color/green"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="解决经营痛点，带你飞！"
                              android:textSize="9sp"
                              android:layout_marginTop="3dp"
                              android:textColor="@color/text_color_two"
                              android:layout_height="wrap_content"/>
                </LinearLayout>
                <ImageView android:layout_width="50dp"
                           android:src="@drawable/ic_launcher"
                           android:layout_height="50dp"/>
            </LinearLayout>
        <ImageView android:layout_width="1dp"
                   android:layout_centerVertical="true"
                   android:layout_toRightOf="@+id/btn_cytt"
                   android:background="@color/gray"
                   android:layout_height="35dp"/>
        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="1"
                      android:id="@+id/liner_two"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:layout_marginLeft="3dp"
                      android:layout_marginRight="5dp"
                      android:orientation="horizontal"
                      android:layout_height="60dp">
            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:layout_weight="1"
                          android:gravity="center|left"
                          android:layout_height="match_parent">
                <TextView android:layout_width="wrap_content"
                          android:text="申请加入草坪云"
                          android:textSize="13sp"
                          android:textColor="@color/green"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="口袋生意，轻松当老板"
                          android:textSize="9sp"
                          android:layout_marginTop="3dp"
                          android:textColor="@color/text_color_two"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView android:layout_width="50dp"
                       android:src="@drawable/icon_small"
                       android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/relate_news"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/main_index_newws"
                   android:id="@+id/btn_cytt"
                   android:padding="8dp"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="1dp"
                   android:id="@+id/line_one_gray"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="8dp"
                   android:layout_marginRight="8dp"
                   android:layout_toRightOf="@+id/btn_cytt"
                   android:background="@color/gray"
                   android:layout_height="50dp"/>
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/text_color"
                  android:id="@+id/txt_news_one"
                  android:singleLine="true"
                  android:text="光放"
                  android:layout_marginTop="10dp"
                  android:layout_toRightOf="@+id/line_one_gray"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/text_color"
                  android:id="@+id/txt_news_two"
                  android:layout_marginTop="8dp"
                  android:singleLine="true"
                  android:layout_below="@+id/txt_news_one"
                  android:layout_toRightOf="@+id/line_one_gray"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View android:layout_width="match_parent"
          android:background="@color/gray"
          android:layout_height="0.5dp"></View>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="12dp"
                  android:gravity="center_vertical"
                  android:layout_marginTop="8dp"
                  android:background="@color/white"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/icon_woshou"
                   android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="最新入驻"
                  android:layout_marginLeft="6dp"
                  android:textColor="@color/text_color"
                  android:textSize="16sp"
                  android:layout_height="wrap_content"/>
        <com.caoping.cloud.widget.AutoTextView
                android:id="@+id/switcher02"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:layout_height="wrap_content"
                android:background="@null"
                auto3d:textSize="16sp" />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_marginLeft="8dp"
                  android:layout_marginRight="8dp"
                  android:layout_marginTop="8dp"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/icon_orange"
                   android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="草种供应"
                  android:layout_weight="1"
                  android:textSize="18sp"
                  android:layout_marginLeft="6dp"
                  android:textColor="@color/orange"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="查看更多 "
                  android:drawableRight="@drawable/in"
                  android:textSize="16sp"
                  android:id="@+id/btn_more2"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>