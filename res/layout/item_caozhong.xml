<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:padding="8dp"
              android:background="@drawable/btn_white_shape"
              android:layout_width="wrap_content"
              android:layout_height="120dp">
    <ImageView android:layout_width="120dp"
               android:id="@+id/cover"
               android:scaleType="centerCrop"
               android:src="@drawable/no_pic"
               android:layout_height="120dp"/>
    <TextView android:layout_width="wrap_content"
              android:textColor="@color/text_color"
              android:id="@+id/title"
              android:layout_marginTop="6dp"
              android:singleLine="true"
              android:layout_marginLeft="6dp"
              android:layout_toRightOf="@+id/cover"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:textColor="@color/red_p"
              android:id="@+id/money"
              android:layout_marginTop="6dp"
              android:singleLine="true"
              android:layout_marginLeft="6dp"
              android:layout_toRightOf="@+id/cover"
              android:layout_below="@+id/title"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:textColor="@color/text_color_two"
              android:id="@+id/saleCount"
              android:layout_marginTop="6dp"
              android:layout_alignParentRight="true"
              android:singleLine="true"
              android:layout_below="@+id/title"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:textColor="@color/text_color_two"
              android:id="@+id/company"
              android:layout_below="@+id/money"
              android:layout_marginTop="6dp"
              android:layout_marginLeft="6dp"
              android:layout_toRightOf="@+id/cover"
              android:layout_height="wrap_content"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="horizontal"
                  android:padding="8dp"
                  android:visibility="gone"
                  android:layout_toRightOf="@+id/cover"
                  android:layout_below="@+id/company"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="25dp"
                   android:src="@drawable/sm_v1"
                   android:id="@+id/sm_v1"
                   android:layout_height="25dp"/>
        <ImageView android:layout_width="25dp"
                   android:src="@drawable/sm_v2"
                   android:id="@+id/sm_v2"
                   android:layout_height="25dp"/>
        <ImageView android:layout_width="25dp"
                   android:id="@+id/sm_v4"
                   android:src="@drawable/sm_v4"
                   android:layout_height="25dp"/>
        <ImageView android:layout_width="25dp"
                   android:src="@drawable/sm_v5"
                   android:id="@+id/sm_v5"
                   android:layout_height="25dp"/>
        <ImageView android:layout_width="25dp"
                   android:id="@+id/sm_v6"
                   android:src="@drawable/sm_v6"
                   android:layout_height="25dp"/>
    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/btn_address"
              android:layout_marginLeft="128dp"
              android:layout_alignParentBottom="true"
              android:drawablePadding="8dp"
              android:textColor="@color/text_color_two"
              android:drawableLeft="@drawable/sm_shop_location"
              android:layout_height="wrap_content"/>
</RelativeLayout>