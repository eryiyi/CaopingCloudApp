<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="65dp">
    <RelativeLayout android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:id="@+id/foot_liner_one"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="30dp"
                   android:id="@+id/foot_one"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/nav_home_p"
                   android:layout_height="30dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_below="@+id/foot_one"
                  android:layout_centerHorizontal="true"
                  android:text="首页"
                  android:id="@+id/foot_one_text"
                  android:textColor="@color/text_color"
                  android:gravity="center"
                  android:layout_height="match_parent"/>
    </RelativeLayout>


    <RelativeLayout android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:layout_gravity="center"
                    android:id="@+id/foot_liner_two"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="30dp"
                   android:id="@+id/foot_two"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/nav_msg"
                   android:layout_height="30dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_below="@+id/foot_two"
                  android:layout_centerHorizontal="true"
                  android:text="分类"
                  android:id="@+id/foot_two_text"
                  android:textColor="@color/text_color"
                  android:gravity="center"
                  android:layout_height="match_parent"/>
    </RelativeLayout>


    <RelativeLayout android:layout_width="0dp"
                    android:padding="6dp"
                    android:layout_weight="1"
                    android:id="@+id/btn_write"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/nav_new"
                   android:layout_centerInParent="true"
                   android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="0dp"
                    android:padding="6dp"
                    android:layout_weight="1"
                    android:id="@+id/foot_liner_three"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="30dp"
                   android:id="@+id/foot_three"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/nav_cat"
                   android:layout_height="30dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:text="消息"
                  android:id="@+id/foot_three_text"
                  android:layout_below="@+id/foot_three"
                  android:textColor="@color/text_color"
                  android:gravity="center"
                  android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/unread_msg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/em_unread_count_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:layout_gravity="center"
                    android:id="@+id/foot_liner_four"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="30dp"
                   android:id="@+id/foot_four"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/nav_mine"
                   android:layout_height="30dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:text="我的"
                  android:id="@+id/foot_four_text"
                  android:layout_below="@+id/foot_four"
                  android:textColor="@color/text_color"
                  android:gravity="center"
                  android:layout_height="match_parent"/>

    </RelativeLayout>
</LinearLayout>