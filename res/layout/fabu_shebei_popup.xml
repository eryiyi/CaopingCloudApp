<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fabu_erji_qiu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fabu_erji_chu"
        android:layout_marginBottom="6dp"
        android:layout_toLeftOf="@+id/fabu_erji_chu"
        android:clickable="true"
        android:drawablePadding="6dp"
        android:drawableTop="@drawable/fabuzhaoshebei"
        android:gravity="center_horizontal"
        android:text="设备租赁" />

    <TextView
        android:id="@+id/fabu_erji_chu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fabu_popup_rencai"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        android:drawablePadding="6dp"
        android:drawableTop="@drawable/fabuchuzushebei"
        android:gravity="center_horizontal"
        android:text="设备出租" />

    <TextView
        android:id="@+id/fabu_popup_rencai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:drawablePadding="6dp"
        android:drawableTop="@drawable/faburencai"
        android:gravity="center_horizontal"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fabu_erji_fanhui"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/fabufanhui" />

        <View
            style="@style/vertical_line"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/fabu_erji_quxiao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/fabuquxiao" />
    </LinearLayout>

</RelativeLayout>