<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/main"
              android:background="@color/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            layout="@layout/top_liner"/>
    <com.caoping.cloud.widget.ReboundScrollView android:layout_width="match_parent"
                                                android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:padding="12dp"
                      android:layout_height="match_parent">
                <TextView android:layout_width="match_parent"
                          android:text="为保证您的正常运营，请进行真实信息登记！"
                          android:textColor="@color/text_color"
                          android:textSize="14sp"
                          android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:text="公司名称："
                      android:drawableLeft="@drawable/star"
                      android:layout_marginLeft="3dp"
                      android:layout_marginTop="8dp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
            <EditText android:layout_width="match_parent"
                      android:padding="8dp"
                      android:layout_marginTop="3dp"
                      android:id="@+id/company_name"
                      android:textSize="16sp"
                      android:layout_height="45dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="公司法人："
                      android:drawableLeft="@drawable/star"
                      android:layout_marginLeft="3dp"
                      android:layout_marginTop="8dp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
            <EditText android:layout_width="match_parent"
                      android:padding="8dp"
                      android:layout_marginTop="3dp"
                      android:id="@+id/company_faren"
                      android:textSize="16sp"
                      android:layout_height="45dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="营业执照号："
                      android:drawableLeft="@drawable/star"
                      android:layout_marginLeft="3dp"
                      android:layout_marginTop="8dp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
            <EditText android:layout_width="match_parent"
                      android:padding="8dp"
                      android:layout_marginTop="3dp"
                      android:id="@+id/company_yzzz_num"
                      android:textSize="16sp"
                      android:layout_height="45dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="公司所在省市县："
                      android:drawableLeft="@drawable/star"
                      android:layout_marginLeft="3dp"
                      android:layout_marginTop="8dp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <com.caoping.cloud.widget.CustomerSpinner
                        android:background="@drawable/login_edit_bg"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:drawableLeft="@drawable/star"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="6dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/mm_emp_provinceId"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="40dp">
                </com.caoping.cloud.widget.CustomerSpinner>

                <com.caoping.cloud.widget.CustomerSpinner
                        android:background="@drawable/login_edit_bg"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:drawableLeft="@drawable/star"
                        android:layout_marginTop="6dp"
                        android:paddingLeft="15dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/mm_emp_cityId"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="40dp">

                </com.caoping.cloud.widget.CustomerSpinner>
                <com.caoping.cloud.widget.CustomerSpinner
                        android:background="@drawable/login_edit_bg"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:drawableLeft="@drawable/star"
                        android:layout_marginTop="6dp"
                        android:paddingLeft="15dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/mm_emp_countryId"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="40dp">
                </com.caoping.cloud.widget.CustomerSpinner>
            </LinearLayout>
            <TextView android:layout_width="wrap_content"
                      android:text="公司详细地址："
                      android:drawableLeft="@drawable/star"
                      android:layout_marginLeft="3dp"
                      android:layout_marginTop="8dp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
            <EditText android:layout_width="match_parent"
                      android:padding="8dp"
                      android:layout_marginTop="3dp"
                      android:id="@+id/company_address"
                      android:textSize="16sp"
                      android:layout_height="45dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="公司主营业务："
                      android:drawableLeft="@drawable/star"
                      android:layout_marginLeft="3dp"
                      android:layout_marginTop="8dp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
            <EditText android:layout_width="match_parent"
                      android:padding="8dp"
                      android:layout_marginTop="3dp"
                      android:id="@+id/company_detail"
                      android:textSize="16sp"
                      android:layout_height="45dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="营业执照："
                      android:drawableLeft="@drawable/star"
                      android:layout_marginLeft="3dp"
                      android:layout_marginTop="8dp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:id="@+id/company_yzzz_pic"
                       android:src="@drawable/md_add_pic"
                       android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="公司法人身份证（正面）："
                      android:drawableLeft="@drawable/star"
                      android:layout_marginLeft="3dp"
                      android:layout_marginTop="8dp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:id="@+id/company_faren_pic_z"
                       android:src="@drawable/md_add_pic"
                       android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="公司法人身份证（反面）："
                      android:drawableLeft="@drawable/star"
                      android:layout_marginLeft="3dp"
                      android:layout_marginTop="8dp"
                      android:textColor="@color/text_color"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:id="@+id/company_faren_pic_f"
                       android:src="@drawable/md_add_pic"
                       android:layout_height="wrap_content"/>

        </LinearLayout>
    </com.caoping.cloud.widget.ReboundScrollView>
</LinearLayout>